<?xml version="1.0"?>
<screens width="1000" height="800">
    <screen name="menu" bg="images/tile.png">
        <button x="315" y="0" width="350" height="250" img="images/title_back.png" screen="none" textsize="1"> </button>
        <button x="350" y="75" width="300" height="170" img="images/title.png" screen="none" textsize="1"> </button>
        <button x="300" y="300" width="400" height="100" img="images/button.png" screen="levels" textsize="64">LEVELS</button>
        <button x="300" y="400" width="400" height="100" img="images/button.png" screen="options" textsize="64">OPTIONS</button>
        <button x="300" y="500" width="400" height="100" img="images/button.png" screen="help" textsize="64">HELP</button>
    </screen>
    <screen name="levels" bg="images/tile.png">
        <button x="50" y="50" width="50" height="50" img="images/back.png" screen="menu" textsize="1"> </button>
