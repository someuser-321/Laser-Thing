    <screen name="help" bg="images/tile.png">
        <button x="50" y="50" width="50" height="50" img="images/back.png" screen="menu" textsize="1"> </button>
        <text x="50" y="200" align="left" r="255" g="255" b="255" size="32">To play the game, reflect light from the source into the receiver.</text>
        <text x="50" y="240" align="left" r="255" g="255" b="255" size="32">It must receive over a certain amount of light for the level to complete.</text>
        <text x="50" y="280" align="left" r="255" g="255" b="255" size="32">Have fun!</text>
    </screen>
